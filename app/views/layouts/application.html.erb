<!DOCTYPE html>
<html>
<head>
  <title>Orderplex</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

<!-- Fixed navbar -->
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'OrderPlex', root_path, class: 'navbar-brand' %>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <%= content_tag :li, :class => ("active" if current_page?(products_path)) do
            link_to 'Products', products_path
          end %>
          <%= content_tag :li, :class => ("active" if current_page?(orders_path)) do
            link_to 'Orders', orders_path
          end %>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>

  <div class="container">
    <div id="alert-messages">
      <% color = 'alert-success' %>
      <% flash.each do |name, message| %>
        <% color = 'alert-danger' if name == :error %>
        <%= content_tag :div, class: "alert #{color} alert-dismissible", role: 'alert' do %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= message %>
        <% end %>
      <% end %>
    </div>

    <%= yield %>
  </div> <!-- /container -->

</body>
</html>
